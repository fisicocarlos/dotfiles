{
    "editor.insertSpaces": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "selection",
    "editor.rulers": [
        100
    ],
    "editor.tabSize": 4,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.suggestSmartCommit": false,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "vim.autoindent": true,
    "vim.cursorStylePerMode.visual": "line",
    "vim.cursorStylePerMode.visualblock": "line",
    "vim.cursorStylePerMode.visualline": "line",
	"vim.hlsearch": true,
	"vim.mouseSelectionGoesIntoVisualMode": false,
    "vim.overrideCopy": false,
    "vim.startInInsertMode": true,
    "vim.useCtrlKeys": false,
    "workbench.colorTheme": "Default Dark+ Experimental",
    "vim.useSystemClipboard": true,
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.list.openMode": "doubleClick",
    "workbench.startupEditor": "none",
    "editor.fontSize": 14,
    "editor.fontFamily": "'SauceCodePro Nerd Font', 'monospace', monospace",
    "[python]": {
        "editor.rulers": [
            72,
            79
        ]
    },
    "hdinsight.disableOpenSurveyLink": true
}